<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Host Stream</title>
  <link rel="stylesheet" href="/css/host.css">
</head>
<body>
  <div class="container">
    <div class="header">
      <h1>Host Live Stream</h1>
      <div class="stream-info">
        <div class="room-id-container">
          <h3>Stream ID: <span id="roomId"></span></h3>
          <button id="copyBtn" class="btn">Copy ID</button>
        </div>
      </div>
    </div>

    <div class="main-content">
      <div class="video-container">
        <video id="localVideo" autoplay muted playsinline></video>
        <div class="stream-controls">
          <button id="startBtn" class="btn primary">Start Stream</button>
          <button id="stopBtn" class="btn danger" disabled>End Stream</button>
        </div>
      </div>

      <div class="side-panel">
        <div class="stats-container">
          <h3>Stream Stats</h3>
          <p>Viewers: <span id="viewerCount">0</span></p>
          <p>Status: <span id="streamStatus">Ready</span></p>
        </div>
        <div class="share-container" id="shareLinkContainer">
          <h3>Share Stream</h3>
          <div class="share-link">
            <input type="text" id="shareLink" readonly>
            <button id="copyLinkBtn" class="btn">Copy Link</button>
          </div>
        </div>
      </div>
    </div>

    <div class="footer">
      <button id="returnBtn" class="btn secondary">Return to Dashboard</button>
    </div>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/host.js"></script>
</body>
</html>